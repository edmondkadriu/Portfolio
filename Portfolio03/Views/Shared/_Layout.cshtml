<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio03</title>
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- header section starts  -->


<header>

    <div class="user">
        <img src="~/images/IMG_4551.jpg" alt="">
        <h3 class="name">Edmond Kadriu</h3>
        <p class="post">Full stack Developer</p>
    </div>

    <nav class="navbar">
        <ul>
            <li><a asp-action="Index" >home</a></li>
            <li><a href="#about">about</a></li>
            <li><a href="#education">education</a></li>
            <li><a href="#portfolio">portfolio</a></li>
            <li><a href="#contact">contact</a></li>
            <li><partial name="_LoginPartial" /></li>
        </ul>
    </nav>

</header>
<div id="menu" class="fas fa-bars"></div>
<!-- header section ends -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <section class="about" id="about">
            <h1 class="heading"> My <span>Socials</span></h1>
            <div class="row">
                <div class="counter">
                    <div class="box">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <a href="https://www.facebook.com/edmondkadriuu"><h3>Facebook</h3></a>
                    </div>
                    <div class="box">
                        <span><i class="fab fa-instagram"></i></span>
                        <a href="https://www.instagram.com/edmondkadriu/"><h3>Instagram</h3></a>
                    </div>
                    <div class="box">
                        <span><i class="fab fa-linkedin"></i></span>
                        <a href="#"><h3>LinkedIn</h3></a>
                    </div>
                    <div class="box">
                        <span><i class="fab fa-github"></i></span>
                        <a href="https://github.com/edmondkadriu"><h3>GitHub</h3></a>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    <!-- jquery cdn link  -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- custom js file link  -->
    <script src="~/js/script.js"></script>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
